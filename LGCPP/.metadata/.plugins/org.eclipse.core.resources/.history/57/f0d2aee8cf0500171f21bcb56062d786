#include "Triangle.h"

#ifndef RIGHTTRIANGLE_H
#define RIGHTTRIANGLE_H

class RightTriangle:public Triangle
{
	public:
		RightTriangle(int a, int b);

		virtual int getArea();
		virtual int getPerimeter();

		virtual ~RightTriangle();
	protected:
		RightTriangle(int a, int b, int c);

	private:
		int m_a, m_b;
		
};

#endif
