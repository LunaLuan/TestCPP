#include "Shape.h"

#ifndef TRIANGLE_H
#define TRIANGLE_H

class Triangle:public Shape
{
	public:
		Triangle(int a, int b, int c);
		virtual int getArea();
		virtual int getPerimeter();
		int getNumEdges();
		static bool isTriangle(int a, int b, int c);
		~Triangle();
	protected:
		int m_a, m_b, m_c;
		
};

#endif
